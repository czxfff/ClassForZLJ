<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/video_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/first_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/video_start"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_media_play" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/pt_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:src="@drawable/leaf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorImg1"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/text_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="叶子" />

            <TextView
                android:id="@+id/text1_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text1"
                android:layout_weight="0.2" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pt_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img2"
            android:src="@drawable/sun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorImg2"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/text_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text2_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="一米阳光" />

            <TextView
                android:id="@+id/text2_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text2"
                android:layout_weight="0.2" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pt_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img3"
            android:src="@drawable/summer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorImg3"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/text_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text3_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="盛夏" />

            <TextView
                android:id="@+id/text3_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text3"
                android:layout_weight="0.2" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>